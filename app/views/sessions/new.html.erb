<div class="col-12 col-sm-9 col-md-6 col-lg-4 mx-auto ">
  <h2 class="text-center">Login</h2>
  <%= form_tag sessions_path do %>
  <div class="row">
    <div class="col-12 pt-3">
      <% text_field_tag :email, params[:email] %>
      <input type="text" class="form-control" placeholder="Username"/>
    </div>
  </div>
  <div class="row">
    <div class="col-12 ">
      <input type="text" class="form-control" placeholder="Passwort"/>
    </div>
  </div>
  <div class="row">
    <div class="col-3 mx-auto py-2">
      <%= link_to "Login", users_show_path, class: "btn btn-secondary ", role: "button"%>
    </div>
  </div>
  <% end %>
</div>
