<div class="row justify-content-around">
  <div class="panel col-11 col-sm-8 ">
    <div class="row">
      <div class="col-12">
        <h2 class="title text-center">Edit
          <%= @user.name %></h2>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
      <%= render partial: 'shared/error_message', locals: {object: resource} %>
    <div class="row">
      <div class="col-6">
        <%= f.file_field :avatar%>
      </div>
      <div class="col-6">
        <%= image_tag(@user.avatar, :alt => "Profile picture", class:"img-fluid max-width:100% height:auto")%>
      </div>
    </div>
    <h5 class="mt-3">Personal Information</h5>
    <div class="row">
      <div class="col-12">
        <%= f.label :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= f.text_field :name , class:"form-control"%>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.label :birthday %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.text_field :birthday , class:"form-control"%>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= f.label :base %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.text_field :base, class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h5 class="mt-3">Hitchhiking Information</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.label :km, "Kilometers hitchhiked" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.text_field :km, class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.label :countries %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.text_field :countries, class:"form-control" %>
      </div>
    </div>
    <h5>Login Information</h5>
    <div class="field">
      <div class="row">
        <div class="col-12">
          <%= f.label :email %><br/>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.email_field :email, class:"form-control" %>
        </div>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="row mt-2">
      <div class="col-12">
        <div class="field">
          <%= f.label :password , "Password "%>
          <i>(<%= @minimum_password_length %>
            characters minimum)</i>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <div class="field">
          <%= f.label :password_confirmation %><br/>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mt-2">
        <div class="field">
          <%= f.label :current_password %>
          <i>(we need your current password to confirm your changes)</i><br/>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

    </div>
    <div class="row justify-content-center mt-4">
      <%= f.submit "Update", class:"btn" %>
    </div>
  <% end %>

  <h5>Cancel my account</h5>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn" %></p>

<%= link_to "Back", user_path(@user.id) %>
</div>
</div>
