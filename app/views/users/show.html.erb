<%# this is the Layout of the user profile %>
<div id="friend-request-panel">
  <%= render 'shared/answer_friend_request' %>
</div>

<div class="row justify-content-around">
    <div class="col-10 col-sm-5 col-md-4 col-lg-3 pb-3">
      <div class="d-flex align-items-center h-100">
          <%= image_tag(@user.avatar, :alt => "Profile picture", class: "img-fluid rounded-picture" )%>
    </div>
  </div>
  <div class="col-12 col-sm-7 col-md-8 col-lg-9 pb-3">
    <%= render 'users/shared/user_stats' %>
  </div>
</div>
<% if current_user.is_friends_with?(@user) || current_user == @user %>
<div class="row">
  <div class="col-12">
    <%= render 'simple_posts/shared/posts_panel' %>
  </div>
</div>


<% end %>
