<%# this is the layout for the posts' panel %>
<div class="panel" id="post-panel">
  <% if @user.simple_posts.empty? %>
    <%= render 'simple_posts/shared/posts_empty' %>
  <% else %>
    <div class="row h-100">
      <div class="col-sm-12 col-md-4" id="post-navigation">
        <%# navigation is rendered %>
        <%= render partial: 'simple_posts/shared/posts_navigation', locals: {simple_post: @simple_post, user: @user} %>
      </div>
      <div class="col-sm-12 col-md-8">
        <div class="row">
          <div class="col-12">
            <div id="post-actions">
              <%# buttons for posts are rendered %>
              <%= render partial: 'simple_posts/shared/posts_actions', locals: {simple_post: @simple_post, user: @user} %>
            </div>
            <div class="row">
              <div class="col-12" id="show-post">
                <%# the currently selected post is rendered %>
                <%= render @simple_post %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <%end %>
</div>
