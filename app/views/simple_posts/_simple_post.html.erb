<div class="row">
  <div class="col-12">
    <h4>
      <%= @simple_post.title %></h4>
    <%= @simple_post.created_at %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <%= @simple_post.text %>
  </div>
</div>

<!-- slider für posts: gucken ob überhaupt bilder da sind, dann erstes element muss active in der klasse haben -->
<% if  !@simple_post.pictures[0].nil? %>
  <div  class="row">
    <div class="col-12 col-sm-8">
      <div id="postCarouselControls" class="carousel slide" data-ride:"carousel"="data-ride:">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag @simple_post.pictures[0], alt: "Pictures of Post", class: "d-block w-100" %>
          </div>
          <% if  !@simple_post.pictures[1].nil? %>
            <% @simple_post.pictures.drop(1).each do |p| %>
              <div class="carousel-item ">
                <%= image_tag p, alt: "Pictures of Post", class: "d-block w-100" %>
              </div>
                <% end %>
        </div>
        <a class="carousel-control-prev" href="#postCarouselControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#postCarouselControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      <% end %>
      </div>
    </div>
  </div>
<% end %>
